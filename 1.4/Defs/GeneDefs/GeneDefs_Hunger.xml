<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--WIP-->
  <!--Needs to double the effect of negative hunger thoughts.-->
  <!--Mental breaks need to be food binges-->
	<GeneDef>
		<defName>VRE_Gluttonous</defName>
		<label>Gluttonous</label>
		<description>Carriers of this gene have elastic, bottomless stomachs and are capable of consuming twice as much food.\n\nThey will become increasingly unhappy if hungry, and most mental breaks will be food binges.</description>
		<iconPath>UI/Icons/Genes/Gene_Gluttonous</iconPath>
		<biostatCpx>1</biostatCpx>
		<biostatMet>2</biostatMet>
		<displayCategory>Healing</displayCategory>
		<displayOrderInCategory>2000.12</displayOrderInCategory>
		<exclusionTags>
		</exclusionTags>
    <statOffsets>
			<VEF_FoodCapacityMultiplier>1</VEF_FoodCapacityMultiplier>
		</statOffsets>
    <!--Implement!-->
		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
        <foodBingeMentalBreakSelectionChanceFactor>999</foodBingeMentalBreakSelectionChanceFactor>
        <doubleNegativeFoodThought>true</doubleNegativeFoodThought>
			</li>
		</modExtensions>
	</GeneDef>
</Defs>